<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity ="top"
    tools:context=".MainActivity"
    android:background="#269"
    >


    <Button
        android:id="@+id/get_Lista_Piese"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Lista piese"
        android:textColor="#000"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/melodie2"
        android:layout_marginLeft="15dp"
        />



    <Button
        android:id="@+id/Play_all"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Play all"
        android:textColor="#000"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/melodie2"
        android:layout_marginLeft="15dp"
        />

    <Button
        android:id="@+id/Show_Playlist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Playlists"
        android:textColor="#000"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/melodie"
        android:layout_marginLeft="15dp"
        />

    <Button
        android:id="@+id/Play_radio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Radio"
        android:textColor="#000"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/melodie"
        android:layout_marginLeft="15dp"
        />
    <Button
        android:id="@+id/Play_internet"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Internet"
        android:textColor="#000"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/melodie2"
        android:layout_marginLeft="15dp"
        />

    <Button
        android:id="@+id/btn_About"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="About"
        android:textColor="#000"
        android:textSize="26sp"
        android:layout_marginTop="60dp"
        android:background="@drawable/melodie2"
        android:layout_marginLeft="15dp"
        />



</LinearLayout>